<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Update <%=currentUser.username%></h1>
        <div style="width:30%; margin:25px auto">
            <form class="form-horizontal" action="/users/<%=currentUser._id%>?_method=PUT" method= "POST" enctype="multipart/form-data">
                <div class="form-group ">
                    <label class="control-label" for="username">Username</label>
                    <input class="form-control" type="text" required name="username" disabled value="<%=currentUser.username%>">
                </div>
                <!--<div class="form-group">-->
                <!--    <label class="control-label" for="password">Password</label>-->
                <!--    <input class="form-control" type="password" required name="password" disabled placeholder="Password">-->
                <!--</div>-->
                <div class="form-group">
                    <label class="control-label" for="firstname]">First Name</label>
                    <input class="form-control" type="text" required name="firstname" value="<%=currentUser.firstname%>">
                </div>
                <div class="form-group">
                    <label class="control-label" for="lastname]">Last Name</label>
                    <input class="form-control" type="text" required name="lastname" value="<%=currentUser.lastname%>">
                </div>
                <div class="form-group">
                    <label class="control-label" for="emailaddress]">Email Address</label>
                    <input class="form-control" type="email" required name="emailaddress" value="<%=currentUser.emailaddress%>">
                </div>
                <div class="form-group">
                    <img class="thumbnail avatartImg" src="<%=currentUser.dp.url%>">
                    <label class="control-label" for="image">Choose a different Profile Picture</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <!--<a href="/campgrounds">Go Back</a>-->
        </div>
    </div>
</div>

