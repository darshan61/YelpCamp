<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div>
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class= "btn btn-primary btn-large" href="/campgrounds/new">Create a New Campground</a>
            </p>
        </div>    
    </header>
    
    <!--<div class="row">-->
    <!--    <div class="col-lg-12">-->
    <!--        <h2>Our most popular campgrounds!</h2>-->
    <!--    </div>-->
    <!--</div>-->
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=campground.image.url %>">
                    <div class="caption">
                      <h4><%=campground.name%></h4>
                      <p> <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">More Info</a></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>